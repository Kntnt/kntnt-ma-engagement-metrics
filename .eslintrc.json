{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "ignorePackages"],
    "max-len": [
      "error",
      {
        "code": 999,
        "comments": 79,
        "ignoreTrailingComments": true
      }
    ],
    "padded-blocks": [
      "error",
      {
        "classes": "always"
      }
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ]
  }
}
